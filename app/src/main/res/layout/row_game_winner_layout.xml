<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_15_dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_winning_user_image"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@drawable/ic_winner_avatar"
                android:scaleType="fitCenter"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4">

            <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                android:id="@+id/tv_winner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#303030"
                android:layout_marginTop="@dimen/margin_10_dp"
                android:layout_marginStart="@dimen/margin_10_dp"
                android:layout_marginLeft="@dimen/margin_10_dp"
                android:textSize="@dimen/font_size_16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="0.3">

            <LinearLayout
                android:layout_width="85dp"
                android:layout_height="55dp"
                android:background="@drawable/bg_winning_prize"
                android:layout_gravity="center"
                android:gravity="center">
                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/iv_winning_gift"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:scaleType="fitCenter"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>