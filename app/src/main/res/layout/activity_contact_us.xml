<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.AboutUsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_35_dp"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_logo"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_splash_iofferbh" />

                <com.accentrs.iofferbh.view.OpenSansRegularTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_us_text"
                    android:textSize="@dimen/font_size_16sp"
                    android:layout_marginTop="@dimen/margin_5_dp"
                    android:layout_marginStart="@dimen/margin_35_dp"
                    android:layout_marginLeft="@dimen/margin_35_dp"
                    android:layout_marginEnd="@dimen/margin_35_dp"
                    android:layout_marginRight="@dimen/margin_35_dp"
                    android:textColor="#5D5D5D"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_iofferh_whatsapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin_35_dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                        android:id="@+id/tv_whatsapp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_call_text"
                        android:layout_marginStart="@dimen/margin_35_dp"
                        android:gravity="center_vertical"
                        android:drawableStart="@drawable/ic_contact_us_call"
                        android:drawableLeft="@drawable/ic_contact_us_call"
                        android:drawablePadding="@dimen/margin_5_dp"
                        android:layout_marginLeft="@dimen/margin_35_dp"
                        android:layout_marginEnd="@dimen/margin_35_dp"
                        android:layout_marginRight="@dimen/margin_35_dp"
                        android:textColor="#5D5D5D"
                        android:textSize="18sp"

                        />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_25_dp"
                    android:orientation="horizontal">


                    <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                        android:id="@+id/tv_offerbh_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_email_text"
                        android:drawableStart="@drawable/ic_contact_us_mail"
                        android:drawableLeft="@drawable/ic_contact_us_mail"
                        android:drawablePadding="@dimen/margin_10_dp"
                        android:gravity="center_vertical"
                        android:textColor="#5D5D5D"
                        android:textSize="18sp"
                        android:layout_marginStart="@dimen/margin_35_dp"
                        android:layout_marginLeft="@dimen/margin_35_dp"
                        android:layout_marginEnd="@dimen/margin_35_dp"
                        android:layout_marginRight="@dimen/margin_35_dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="@dimen/margin_30_dp"
                    android:orientation="vertical">


                    <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                        android:id="@+id/tv_offerbh_terms_and_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_us_terms_and_condition_text"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:layout_marginStart="@dimen/margin_40_dp"
                        android:layout_marginLeft="@dimen/margin_40_dp"
                        android:layout_marginEnd="@dimen/margin_35_dp"
                        android:layout_marginRight="@dimen/margin_35_dp" />

                    <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                        android:id="@+id/tv_iofferbh_privacy_policy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/margin_35_dp"
                        android:layout_marginLeft="@dimen/margin_40_dp"
                        android:layout_marginRight="@dimen/margin_35_dp"
                        android:layout_marginStart="@dimen/margin_40_dp"
                        android:layout_marginTop="@dimen/margin_10_dp"
                        android:text="@string/contact_us_privacy_policy_text"
                        android:textColor="@color/blue"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>





        </LinearLayout>
    </ScrollView>





</LinearLayout>