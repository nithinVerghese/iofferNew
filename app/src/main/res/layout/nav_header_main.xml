<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:gravity="start"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_25_dp"
        android:layout_marginLeft="@dimen/margin_25_dp"
        android:layout_marginStart="@dimen/margin_25_dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:layout_marginLeft="@dimen/margin_10_dp"
            >
            <ImageView
                android:id="@+id/iv_user_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
              />


        </RelativeLayout>


        <com.accentrs.iofferbh.view.OpenSansBoldTextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10_dp"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/font_size_14sp"
            android:layout_marginStart="@dimen/margin_5_dp"
            android:layout_marginLeft="@dimen/margin_5_dp"
            android:textColor="@color/white" />

        <com.accentrs.iofferbh.view.OpenSansLightTextView
            android:id="@+id/tv_user_email_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5_dp"
            android:layout_marginStart="@dimen/margin_5_dp"
            android:layout_marginLeft="@dimen/margin_5_dp"
            android:text=""
            android:textSize="@dimen/font_size_12sp"
            android:textColor="@color/white" />

    </LinearLayout>



</LinearLayout>
