<?xml version="1.0" encoding="utf-8"?>


    <!--android:layout_marginTop="@dimen/margin_5_dp"-->
    <!--android:layout_marginRight="0dp"-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_delivery_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="@dimen/margin_3_dp"
    tools:targetApi="lollipop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
       >


        <LinearLayout
        android:id="@+id/ll_delivery_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/iv_delivery_store_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="28dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/bg_deactive_btn" />

        <TextView
            android:id="@+id/tv_delivery_store_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/msg_loading"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

