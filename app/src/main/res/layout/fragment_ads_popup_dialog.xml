<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.accentrs.iofferbh.fragment.AdsPopupDialogFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/ll_ad_popup_close"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_5_dp"
            android:layout_marginRight="@dimen/margin_5_dp"
            android:layout_marginTop="@dimen/margin_10_dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_ad_popup_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:paddingEnd="@dimen/padding_5_dp"
                android:paddingLeft="@dimen/padding_5_dp"
                android:paddingRight="@dimen/padding_5_dp"
                android:paddingStart="@dimen/padding_5_dp"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                app:srcCompat="@drawable/ic_close_spinning_wheel_black" />

        </RelativeLayout>


        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/iv_ad_popup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_ad_popup_close"
            android:layout_margin="10dp"
            android:minHeight="250dp"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:id="@+id/ll_company_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_ad_popup"
            android:layout_marginEnd="@dimen/margin_10_dp"
            android:layout_marginLeft="@dimen/margin_10_dp"
            android:layout_marginRight="@dimen/margin_10_dp"
            android:layout_marginStart="@dimen/margin_10_dp"
            android:orientation="horizontal"
            android:weightSum="1">


            <ImageView
                android:id="@+id/iv_ads_popup_company"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="2dp"
                android:scaleType="fitCenter" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                    android:id="@+id/tv_company_offer_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15_dp"
                    android:layout_marginLeft="@dimen/margin_15_dp"
                    android:layout_marginTop="3dp"
                    android:maxLines="2"
                    android:text="sdfghjklkjhgfdsdfghjklkjhgfdsadfghjk"
                    android:textColor="#333333"
                    android:textSize="@dimen/text_18sp" />

                <!--<com.accentrs.iofferbh.view.OpenSansSemiBoldTextView-->
                <!--android:id="@+id/tv_company_website"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/tv_company_offer_desc"-->
                <!--android:layout_marginBottom="3dp"-->
                <!--android:layout_marginLeft="@dimen/margin_15_dp"-->
                <!--android:layout_marginStart="@dimen/margin_15_dp"-->
                <!--android:layout_marginTop="3dp"-->
                <!--android:autoLink="all"-->
                <!--android:clickable="true"-->
                <!--android:focusable="true"-->
                <!--android:maxLines="2"-->
                <!--android:text="lkjhgfdghjklkjhgfdghjkjhgfdfghjkjhgfdsfghj"-->
                <!--android:textColor="#333333"-->
                <!--android:textSize="@dimen/text_12sp" />-->
            </RelativeLayout>

        </LinearLayout>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_ad_popup"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_company_info"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorAccent"
            android:minHeight="35dp"
            android:text="View Offer"
            android:textColor="#ffffff"
            android:textSize="12sp" />
    </RelativeLayout>


</LinearLayout>
