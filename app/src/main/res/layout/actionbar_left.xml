<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ll_custom_ab_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:layout_marginEnd="@dimen/margin_15_dp"
        android:layout_marginRight="@dimen/margin_15_dp"
        android:layout_marginStart="@dimen/margin_12_dp"
        android:layout_marginLeft="@dimen/margin_12_dp"
        android:orientation="horizontal"
        android:background="@color/black"
        >

        <ImageView
            android:id="@+id/iv_custom_ab_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" />
    </LinearLayout>

</merge>