<?xml version="1.0" encoding="utf-8"?>


    <!--android:layout_marginTop="@dimen/margin_5_dp"-->
    <!--android:layout_marginRight="0dp"-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_coupon_store"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="@dimen/tab_elevation_value"
    app:cardCornerRadius="@dimen/margin_3_dp"
    tools:targetApi="lollipop">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
       >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin_3_dp"
        android:layout_marginLeft="@dimen/margin_5_dp"
        android:layout_marginRight="@dimen/margin_5_dp">

        <TextView
            android:id="@+id/available_ccupons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="available ccupons: 0"
            android:layout_marginTop="@dimen/margin_3_dp"
            android:textSize="12sp"
            android:gravity="left"
            android:textStyle="bold"
            android:autoSizeTextType="none"


            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_coupon_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_coupon_store_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/bg_deactive_btn" />

        <TextView
            android:id="@+id/tv_coupon_store_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/msg_loading"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>

