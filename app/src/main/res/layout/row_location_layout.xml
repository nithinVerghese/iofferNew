<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_location_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="3dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="@dimen/margin_5_dp"
        android:layout_marginLeft="@dimen/margin_5_dp"
        android:layout_marginEnd="@dimen/margin_5_dp"
        android:layout_marginRight="@dimen/margin_5_dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                    android:id="@+id/tv_location_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_15_dp"
                    android:layout_marginEnd="@dimen/margin_15_dp"
                    android:layout_marginTop="@dimen/padding_8_dp"
                    android:layout_marginBottom="@dimen/margin_5_dp"
                    android:text=""
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/font_size_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginEnd="@dimen/margin_15_dp"
                    android:layout_marginLeft="@dimen/margin_15_dp"
                    android:layout_marginRight="@dimen/margin_15_dp"
                    android:visibility="gone"
                    android:layout_marginStart="@dimen/margin_15_dp"
                    android:background="#f0f0f0" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">

                <com.accentrs.iofferbh.view.OpenSansLightTextView
                    android:id="@+id/tv_location_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="@dimen/padding_15_dp"
                    android:paddingStart="@dimen/padding_15_dp"
                    android:layout_marginBottom="@dimen/margin_5_dp"
                    android:paddingRight="@dimen/margin_15_dp"
                    android:paddingEnd="@dimen/margin_15_dp"
                    android:paddingTop="@dimen/padding_8_dp"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/text_14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:layout_marginEnd="@dimen/margin_25_dp"
                    android:layout_marginRight="@dimen/margin_25_dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_change_location" />

                    <com.accentrs.iofferbh.view.OpenSansSemiBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="5.9sp"
                        android:layout_marginStart="@dimen/padding_8_dp"
                        android:layout_marginLeft="8dp"
                        android:text="@string/location_text"
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_14sp" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>